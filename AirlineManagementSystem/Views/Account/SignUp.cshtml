@model AirlineManagementSystem.Models.Admin
@{
    ViewBag.Title = "SignUp";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Registration Page</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/assets/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    @*<link rel="stylesheet" href="~/assets/plugins/icheck-bootstrap/icheck-bootstrap.min.css">*@
    <!-- Theme style -->
    <link rel="stylesheet" href="~/assets/dist/css/adminlte.min.css">
</head>
<body class="hold-transition register-page">
    <div class="register-box">

        <div class="card">
            <div class="card-body register-card-body">
                <p class="login-box-msg">Register a new membership</p>

                @*@using (Html.BeginForm("SignUp", "Account", new { enctype = "multipart/form-data" }))
        {*@

                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                <span class="text-danger" id="msgName"></span>
                <div class="input-group mb-3">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", onchange = "validdate('#Name', '#msgName', 'Name ')", @placeholder = "Full name" })

                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                <span class="text-danger" id="email"></span>
                <div class="input-group mb-3">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", onchange = "validdate('#Email', '#email', 'Email ')", @placeholder = "Email" })

                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.Contact, "", new { @class = "text-danger" })
                <span class="text-danger" id="contact"></span>
                <div class="input-group mb-3">
                    @Html.TextBoxFor(model => model.Contact, new { @class = "form-control", onchange = "validdate('#Contact', '#contact', 'Contact')", @placeholder = "contact", @type = "Number" })

                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-phone"></span>
                        </div>
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                <span class="text-danger" id="address"></span>
                <div class="input-group mb-3">
                    @Html.TextBoxFor(model => model.Address, new { @class = "form-control", onchange = "validdate('#Address', '#address', 'Address')", @placeholder = "Address" })

                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-home"></span>
                        </div>
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                <span class="text-danger" id="image"></span>
                <div class="input-group mb-3">
                    @Html.TextBoxFor(model => model.Image, new { @class = "form-control", onchange = "validdate('#Image', '#image', 'Image')", @type = "File" })

                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-file"></span>
                        </div>
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                <span class="text-danger" id="password"></span>
                <div class="input-group mb-3">
                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", onchange = "validdate('#Password', '#password', 'Password')", @placeholder = "Password", @type = "Password" })

                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>

                <div class="social-auth-links text-center">
                    <button onclick="RegisterAdmin();" id="btnSubmit" class="btn btn-block btn-success"><h6>Sign me up</h6></button>
                    <a href="#" class="btn btn-block btn-primary">
                        <i class="fab fa-facebook mr-2"></i>
                        Sign up using Facebook
                    </a>

                    <a href="#" class="btn btn-block btn-danger">
                        <i class="fab fa-google-plus mr-2"></i>
                        Sign up using Google+
                    </a>
                </div>
                @*}*@

                <a href="login.html" class="text-center">I already have a membership</a>
            </div>
            <!-- /.form-box -->
        </div><!-- /.card -->
    </div>
    <!-- /.register-box -->
    <!-- jQuery -->
    <script src="~/assets/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/assets/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/assets/dist/js/adminlte.min.js"></script>

    <script type="text/javascript" src="~/Scripts/jquery-3.4.1.js"></script>
    <link href="~/AMSJS/iziToast.css" rel="stylesheet" />
    <script src="~/AMSJS/iziToast.js"></script>
    <script src="~/AMSJS/Admins.js"></script>
</body>
</html>
