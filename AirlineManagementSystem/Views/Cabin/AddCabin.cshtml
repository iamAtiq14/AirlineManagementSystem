@model AirlineManagementSystem.Models.Cabin
@{
    ViewBag.Title = "AddCabin";
    Layout = "~/Views/Shared/MyAdminMaster.cshtml";
}


<div class="modal fade" id="Modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="title" id="defaultModalLabel">Cabin</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <input type="hidden" id="hdnfieldcabin" class="form-control" />
                        <div class="form-group form-float">
                            <label class="control-label">Cabin</label>
                            <input type="text" id="Name" onchange="validdate('#Name','#name','Cabin Name')" class="form-control" placeholder="Cabin Name">
                            <span class="text-danger" id="name"></span>
                        </div>
                        <div class="form-group form-float">
                            <label class="control-label">Status</label>
                            <select id="Status" onchange="validdateDropDowns('#Status', '#msgstatus', 'Status')" class="form-control">
                                <option value="-1">-----Select Status-----</option>
                                <option value="1">Active</option>
                                <option value="0">InActive</option>
                            </select>
                            <span class="text-danger" id="msgstatus"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <button type="button" class="btn btn-danger waves-effect col-md-12" data-dismiss="modal">CLOSE</button>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <button class="btn btn-raised btn-primary waves-effect col-md-12" id="btnSubmit" onclick="SubmitData();">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="card">
            <div class="header">
                <h2>Cabin Details</h2>
            </div>
            <div class="body">
                <div class="table-responsive">
                    <button type="button" class="btn btn-raised btn-primary waves-effect" data-toggle="modal" data-target="#Modal">
                        Add Cabin
                    </button>
                    <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                        <thead>
                            <tr>
                                <th>Sno:</th>
                                <th>Name</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody id="mytable">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>




<script type="text/javascript" src="~/Scripts/jquery-3.4.1.js"></script>
<link href="~/AMSJS/iziToast.css" rel="stylesheet" />
<script src="~/AMSJS/iziToast.js"></script>
<script type="text/javascript" src="~/AMSJS/Cabin.js"></script>



