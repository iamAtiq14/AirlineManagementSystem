@model AirlineManagementSystem.Models.Schedule
@{
    ViewBag.Title = "AddSchedule";
    Layout = "~/Views/Shared/MyAdminMaster.cshtml";
}

<div class="modal fade" id="Modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="title" id="defaultModalLabel">Schedule</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <input type="hidden" id="hdnfieldschedule" />
                    <div class="col-md-12">
                        <label class="control-label">AirLine</label>
                        <div class="form-group form-float" onchange="validdateDropDowns('#ddlair', '#msgair', 'AirLine')" id="ddlair"></div>
                        <label class="control-label">Route</label>
                        <div class="form-group form-float" onchange="validdateDropDowns('#ddlroute', '#msgroute', 'Route')" id="ddlroute"></div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Departure Date</label>
                            <input type="date" onchange="validdate('#Date','#date','Departure Date')" class="form-control" id="Date">
                            <span class="text-danger" id="date"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Departure Time</label>
                            <input type="datetime-local" onchange="validdate('#DepartureTime','#msgdep','Departure Time')" class="form-control" id="DepartureTime">
                            <span class="text-danger" id="msgdep"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Arrival Time</label>
                            <input type="datetime-local" onchange="validdate('#Time','#msgtime','Arrival Time')" class="form-control" id="Time">
                            <span class="text-danger" id="msgtime"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Status</label>
                            <select class="form-control" onchange="validdateDropDowns('#Status', '#msgStatus', 'Status');" id="Status">
                                <option value="-1">----Select Status----</option>
                                <option value="1">Active</option>
                                <option value="0">InActive</option>
                            </select>

                            <span class="text-danger" id="msgStatus"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <button type="button" class="btn btn-danger waves-effect col-md-12" data-dismiss="modal">CLOSE</button>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <button class="btn btn-raised btn-primary waves-effect col-md-12" id="btnSubmit" onclick="SubmitData();">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="card">
            <div class="header">
                <h2>Schedule Details</h2>
            </div>
            <div class="body">
                <div class="table-responsive">
                    <button type="button" class="btn btn-raised btn-primary waves-effect" data-toggle="modal" data-target="#Modal">
                        Add Schedule
                    </button>
                    @*@Html.Partial("_Schedule")*@
                    <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                        <thead>
                            <tr>
                                <th>Sno:</th>
                                <th>Airline</th>
                                <th>Route</th>
                                <th>Departure Date</th>
                                <th>Departure Time</th>
                                <th>Arrival Time</th>
                                <th>Airport from</th>
                                <th>Airport To</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody id="mytable">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="~/Scripts/jquery-3.4.1.js"></script>
<link href="~/AMSJS/iziToast.css" rel="stylesheet" />
<script src="~/AMSJS/iziToast.js"></script>
<script type="text/javascript" src="~/AMSJS/Schedule.js"></script>

